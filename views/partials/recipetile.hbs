<div class="tile">
  <img class="img-recipe" src="{{image}}" alt="{{title}}">
  <h2>{{title}}</h2>
  <h3>{{cuisine}}</h3> 
  <h3>{{duration}} mins</h3>
  <h3>Cook: {{cook.fullName}}</h3>

  <form method="get" action="/recipe/detail/{{_id}}">
    <input type="submit" value="See details"/>
  </form>

  <form method="get" action="/recipe/edit/{{_id}}">
    <input type="submit" value="Edit"/>
  </form>

  <form method="post" action="/recipe/remove/{{_id}}">
    <input type="submit" value="Remove">
  </form>


</div>